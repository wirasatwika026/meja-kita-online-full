<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="py-5">
                <i class="fas fa-times-circle text-danger" style="font-size: 6rem;"></i>
                <h1 class="display-4 mt-4 mb-3">Oops!</h1>
                <h2 class="mb-3">Something went wrong</h2>
                <p class="lead text-muted mb-4">
                    <%= message || 'An unexpected error occurred. Please try again later.' %>
                </p>

                <% if (typeof error !=='undefined' && error.stack && process.env.NODE_ENV==='development' ) { %>
                    <div class="alert alert-danger text-start mt-4">
                        <h6>Error Details (Development Mode):</h6>
                        <pre class="small"><%= error.stack %></pre>
                    </div>
                    <% } %>

                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go Home
                            </a>
                            <button onclick="location.reload()" class="btn btn-outline-secondary">
                                <i class="fas fa-redo me-2"></i>Try Again
                            </button>
                        </div>
            </div>
        </div>
    </div>
</div>